/* pages/device/report.wxss */

.container{
  background-color: #F6F7FB;
  overflow-x: hidden;
  min-height: 100vh;
  padding-bottom: 130rpx;
}

.form{
  width: 100%;
}

.form-box{
  width: 95%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40rpx;
  min-height: 100rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: block;
  transition: all .5s ease-out;
  /* flex-direction: row; */
}

.form-box-title{
  margin: 30rpx;
  float: left;
  font-size: 31rpx;
  color: #939393;
  width: 20%;
}

.form-box-title.vertical{
  margin-bottom: 0;
}

.form-box-field{
  float: right;
  text-align: right;
  font-size: 28rpx;
  margin: 30rpx;
  width: 60%;
  padding-right: 15rpx;
}

.form-box-pics{
  position: relative;
  display: inline-block;
  padding: 0 20rpx 10rpx 20rpx;
  width: 100%;
}

.upload-pic{
  width: 140rpx;
  height: 140rpx;
  float: left;
  margin-right: 20rpx;
  margin-top: 20rpx;
  transition: all .5s ease-out;
}

.upload-pic .cancel-btn{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  margin-left: 120rpx;
  z-index: 50;
}

.upload-pic .cancel-btn image{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: -20rpx;
}

.upload-pic image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.add-pic-btn{
  width: 140rpx;
  height: 140rpx;
  margin-top: 20rpx;
  background-color: #F5F6FA;
  border-radius: 10rpx;
  float: left;
  z-index: 1000;
  transition: all .5s ease-out;
}

.add-pic-btn image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: auto;
  margin-top: 45rpx;
}

.form-box-field-verical{
  position: relative;
  display: inline-block;
  width: 90vw;
  padding-left: 20rpx;
  font-size: 29rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.form-box-field-placeholder{
  color: #ddd;
}

.form-box-field .signed{
  color: #019EFF;
}

.footer-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  box-shadow: 0 -1rpx 4rpx rgba(0, 0, 0, 0.07);
  z-index: 999;
}

.footer-btn button{
  width: 500rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #019EFF;
  margin: auto;
  margin-top: 10rpx;
}

.footer-btn button:active{
  background-color: #49B8FF;
}